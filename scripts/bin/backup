#!/bin/sh
BACKUP_DRIVE="$1"
COMMAND="$2"
MAPPER="backup-crypted"
MOUNTPOINT="/mnt/backup"

REPO="$MOUNTPOINT/fliewatuet.attic"

die() {
  echo "$1" >> /dev/stderr

  umount

  exit 1
}

umount() {
  sync

  if mountpoint -q "$MOUNTPOINT"; then
    umount "$MOUNTPOINT"
  fi

  if [[ -e "/dev/mapper/$MAPPER" ]]; then
    cryptsetup close --type luks "$MAPPER"
  fi
}

mount() {
  cryptsetup open --type luks "$BACKUP_DRIVE" $MAPPER || die "Could not open LUKS disk"

  mount "/dev/mapper/$MAPPER" "$MOUNTPOINT" || die "Could not mount disk"
}

backup() {
  if mountpoint -q "$MOUNTPOINT"; then

    attic create -v --stats "$REPO::fliewatuet-$(date +%Y-%m-%d-%H-%M)" --exclude-from /home/lukas/backup-excludes /etc/wpa_supplicant.conf /etc/nixos/ /home/lukas

    attic prune -v "$REPO" --keep-daily=14 --keep-weekly=8 --keep-monthly=12
  else
    die "Disk not mounted at: $MOUNTPOINT"
  fi
}

if [[ ! ( -e "$BACKUP_DRIVE" ) ]]; then
  die "No such drive: $BACKUP_DRIVE"
fi

if [[ -n "$COMMAND" ]]; then
  case "$COMMAND" in
    "mount")
      mount
      ;;
    "umount")
      umount
      ;;
    "backup")
      backup
      ;;
    *)
      die "No such command: $COMMAND"
      ;;
  esac


else
  umount

  mount

  backup

  umount
fi
